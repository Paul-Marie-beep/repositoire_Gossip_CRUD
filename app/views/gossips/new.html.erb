
<center>
<br>
<%= form_tag url_for(action:'create'), method: "post" do %>
<%= label_tag 'Titre du potin :' %><br>
<%= text_field_tag 'title' %><br><br>
<%= label_tag 'Potin :' %><br>
<%= text_area_tag 'content'%><br><br>
<%= submit_tag 'Enregistrer le potin'%>
<% end %>
<br>

<% if @new_gossip.errors.any? %>
<div class="alert alert-danger" role="alert">
  <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
  </div>
  <div class="alert alert-warning" role="alert">
  <ul>
    <% @new_gossip.errors.full_messages.each do |message| %>
     <p> <%= message %> </p>
    <% end %>
  </ul>
  </div>

<% end %>

