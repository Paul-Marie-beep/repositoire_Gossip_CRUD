<div class="card">
  <div class="card-header">
  <%= @gos.title %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p> <%= @gos.content %> </p>
      <footer class="blockquote-footer"> potin crée le <%= @gos.created_at %> par
      <cite title="Source Title"> <%= link_to " #{@gos.user.first_name}", author_path(@gos.user.id) %> habitant à <%= link_to "#{@gos.user.city.name}", city_path(@gos.user.city.id) %> </cite></footer>
    </blockquote>
  </div>
</div>

<a href="<%= potin_path(@gos.id) %>" class="btn btn-danger" data-confirm="Êtes-vous sûr de vouloir supprimer le potin?" data-method="DELETE">Supprimer le potin</a>


